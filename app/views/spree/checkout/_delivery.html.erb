<fieldset class="col-md-12" id='shipping_method' data-hook>
  <div class="panel panel-info">
    <div class="panel-heading" align="center"><%= Spree.t(:shipping) %></div>
    <div class="inner" data-hook="shipping_method_inner">
      <div id="methods">
        <%= form.fields_for :shipments do |ship_form| %>

          <div class="shipment">


            <table class="stock-contents" data-hook="stock-contents">
              <colgroup>
                <col style="width: 20%;" />
                <col style="width: 60%;" />
                <col style="width: 15%;" />
                <col style="width: 20%;" />
              </colgroup>
              <thead>
                <th class="shipping-column-end"></th>
                <th class="shipping-column"><%= Spree.t(:item) %></th>
                <th class="shipping-column"><%= Spree.t(:qty) %></th>
                <th class="shipping-column"><%= Spree.t(:price) %></th>
              </thead>
              <tbody>
                <% ship_form.object.manifest.each do |item| %>
                  <tr class="stock-item">
                    <td class="item-image shipping-column-end"><%= image_tag item.variant.display_image.attachment(:mini) %></td>
                    <td class="item-name shipping-column"><%= item.variant.name %></td>
                    <td class="item-qty shipping-column"><%= item.quantity %></td>
                    <td class="item-price shipping-column"><%= display_price(item.variant) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="panel-body text-center">
              <h4 class="stock-shipping-method-title"><%= Spree.t(:shipping_method) %></h4>
              <ul class="field radios shipping-methods">
                <% ship_form.object.shipping_rates.each do |rate| %>
                  <li class="shipping-method">
                    <label>
                      <%= ship_form.radio_button :selected_shipping_rate_id, rate.id %>
                      <span class="rate-name"><%= rate.name %></span>
                      <span class="rate-cost"><%= rate.display_cost %></span>
                    </label>
                  </li>
                <% end %>
              </ul>
            </div>

          </div>

        <% end %>

        <% if @differentiator.try(:missing?) %>
          <div class="shipment unshippable">
            <h3 class="stock-location" data-hook="stock-location">
              <%= Spree.t(:unshippable_items) %>
            </h3>
            <table class="stock-contents" data-hook="stock-missing">
              <colgroup>
                <col style="width: 20%;" />
                <col style="width: 60%;" />
                <col style="width: 20%;" />
                <col style="width: 20%;" />
              </colgroup>
              <thead>
                <th></th>
                <th align='left'><%= Spree.t(:item) %></th>
                <th><%= Spree.t(:qty) %></th>
                <th><%= Spree.t(:price) %></th>
              </thead>
              <tbody>
                <% @differentiator.missing.each do |variant, quantity| %>
                  <tr class="stock-item">
                    <td class="item-image"><%= image_tag variant.display_image.attachment(:mini) %></td>
                    <td class="item-name"><%= variant.name %></td>
                    <td class="item-qty"><%= quantity %></td>
                    <td class="item-price"><%= display_price(variant) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>

      </div>
      <% if Spree::Config[:shipping_instructions] %>
        <p id="minstrs" data-hook>
          <%= form.label :special_instructions, Spree.t(:shipping_instructions) %><br />
          <%= form.text_area :special_instructions, :cols => 40, :rows => 7 %>
        </p>
      <% end %>
    </div>
  </div>
  <div class="form-buttons col-md-12 text-center" data-hook="buttons">
    <%= submit_tag Spree.t(:save_and_continue), :class => 'continue btn btn-default' %>
  </div>

</fieldset>

<br />
